<% layout("/layouts/boilerplate") %>
<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
  }
  .filter {
    text-align: center;
    margin-right: 3rem;
    margin-top: 2rem;
    opacity: 0.7;
  }
  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }
  .filter p {
    font-size: 0.8rem;
  }
</style>
<!-- <br />
  <h1>Locations Available</h1>
<br /> -->
<div id="filters">
  <div class="filter">
    <div><i class="fa-solid fa-bed"></i></div>
    <p>Rooms</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-fire"></i></div>
    <p>Trending</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-percent"></i></div>
    <p>Discounts</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-plane"></i></div>
    <p>Travel</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-chess-rook"></i></div>
    <p>Royal</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-water-ladder"></i></div>
    <p>Pools</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-umbrella-beach"></i></div>
    <p>Beaches</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-location-dot"></i></div>
    <p>Vacation</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-mountain"></i></div>
    <p>Trecking</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-hotel"></i></div>
    <p>5-star</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-snowflake"></i></div>
    <p>Arcitic</p>
  </div>
</div>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% for(let listing of allListings){ %>
  <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col listing-card" style="width: 20rem">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt="listing_image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b>
          <br />
          &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>
